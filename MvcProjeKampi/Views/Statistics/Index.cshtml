
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>İstatistikler</h2>
<br />
<div class="row">
    <div class="col-xl-2 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
        <div class="card bg-warning">
            <div class="card-body px-3 py-5">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="color-card">
                        <p class="mb-0 color-card-head text-white">Toplam Kategori</p>
                        <h2 class="text-white">
                            @ViewBag.Category
                        </h2>
                    </div>
                    <i class="card-icon-indicator mdi mdi-basket bg-inverse-icon-warning"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
        <div class="card bg-danger">
            <div class="card-body px-3 py-5">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="color-card">
                        <p class="mb-0 color-card-head text-white">Yazılım Kategorisindeki Başlık</p>
                        <h2 class="text-white">
                            @ViewBag.Software
                        </h2>
                    </div>
                    <i class="card-icon-indicator mdi mdi-cube-outline bg-inverse-icon-danger"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3 pb-lg-0 pb-xl-3">
        <div class="card bg-primary">
            <div class="card-body px-3 py-5">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="color-card">
                        <p class="mb-0 color-card-head text-white">Adında 'a' Harfi Geçen Yazar</p>
                        <h2 class="text-white">
                            @ViewBag.Writer
                        </h2>
                    </div>
                    <i class="card-icon-indicator mdi mdi-briefcase-outline bg-inverse-icon-primary"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-6 stretch-card pb-sm-3 pb-lg-0">
        <div class="card bg-success">
            <div class="card-body px-3 py-5">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="color-card">
                        <p class="mb-0 color-card-head text-white">En Fazla Başlığı Olan Kategori</p>
                        <h2 class="text-white">
                            @ViewBag.Heading
                        </h2>
                    </div>
                    <i class="card-icon-indicator mdi mdi-account-circle bg-inverse-icon-success"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-6 stretch-card pb-sm-3 pb-lg-0">
        <div class="card bg-black">
            <div class="card-body px-3 py-5">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="color-card">
                        <p class="mb-0 color-card-head text-white">Aktif-Pasif Kategori Farkı</p>
                        <h2 class="text-white">
                            @ViewBag.CategoryResult
                        </h2>
                    </div>
                    <i class="card-icon-indicator mdi mdi-account-circle bg-inverse-icon-success"></i>
                </div>
            </div>
        </div>
    </div>
</div>
